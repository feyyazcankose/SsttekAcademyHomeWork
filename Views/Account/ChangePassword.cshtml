@model SsttekAcademyHomeWork.Models.ViewModels.Auth.ChangePasswordViewModel

<h2>Change Password</h2>

<form asp-action="ChangePassword" method="post" class="d-flex flex-column gap-4">
    <div class="form-group">
        <label>Current Password</label>
        <input asp-for="CurrentPassword" class="form-control" type="password" />
    </div>
    <div class="form-group">
        <label>New Password</label>
        <input asp-for="NewPassword" class="form-control" type="password" />
    </div>
    <div class="form-group">
        <label>Confirm New Password</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Change Password</button>
</form>