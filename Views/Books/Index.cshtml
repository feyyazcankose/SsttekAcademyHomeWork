@{
    ViewData["Title"] = "Books";
}

<h1>Books</h1>
@model List<Book>

<div class="table-responsive rounded shadow mt-5">
    <table class="table table-striped table-hover table-bordered mb-0">
        <thead class="bg-light">
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>ISBN</th>
                <th>Publication Year</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Author</td>
                    <td>@item.ISBN</td>
                    <td>@item.PublicationYear</td>
                    <td>
                        <a class="btn btn-sm btn-success me-2" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                        @* <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> *@
                        @* <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


