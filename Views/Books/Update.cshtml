@{
    ViewData["Title"] = "Book Update";
}

@model UpdateBookViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded">
                <div class="card-header bg-success text-white rounded-top">
                    <h3>Update Book</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Books" asp-action="Update" method="post">
                        <input type="hidden" asp-for="Id" id="Id" name="Id" />
                        <div class="form-group">
                            <label asp-for="Title">Title</label>
                            <input type="text" class="form-control" asp-for="Title" id="Title" name="Title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label asp-for="Author">Author</label>
                            <input type="text" class="form-control" asp-for="Author" id="Author" name="Author" />
                            <span asp-validation-for="Author" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label asp-for="PublicationYear">Publication Year</label>
                            <input type="number" class="form-control" asp-for="PublicationYear" id="PublicationYear"
                                name="PublicationYear" />
                            <span asp-validation-for="PublicationYear" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label asp-for="ISBN">ISBN</label>
                            <input type="text" class="form-control" asp-for="ISBN" id="ISBN" name="ISBN" />
                            <span asp-validation-for="ISBN" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label asp-for="Genre">Genre</label>
                            <input type="text" class="form-control" asp-for="Genre" id="Genre" name="Genre" />
                            <span asp-validation-for="Genre" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label asp-for="Publisher">Publisher</label>
                            <input type="text" class="form-control" asp-for="Publisher" id="Publisher"
                                name="Publisher" />
                            <span asp-validation-for="Publisher" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label asp-for="PageCount">Page Count</label>
                            <input type="number" class="form-control" asp-for="PageCount" id="PageCount"
                                name="PageCount" />
                            <span asp-validation-for="PageCount" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label asp-for="Language">Language</label>
                            <input type="text" class="form-control" asp-for="Language" id="Language" name="Language" />
                            <span asp-validation-for="Language" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label asp-for="Summary">Summary</label>
                            <textarea class="form-control" asp-for="Summary" id="Summary" name="Summary"
                                rows="4"></textarea>
                            <span asp-validation-for="Summary" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label asp-for="AvailableCopies">Available Copies</label>
                            <input type="number" class="form-control" asp-for="AvailableCopies" id="AvailableCopies"
                                name="AvailableCopies" />
                            <span asp-validation-for="AvailableCopies" class="text-danger"></span>
                        </div>

                        <div
                            class="card-footer text-muted rounded-bottom d-flex align-items-center justify-content-between mt-4">
                            <a href="@Url.Action("Index", "Books")" class="btn btn-secondary">Back to List</a>
                            <button type="submit" class="btn btn-success mt-4">Update Book</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}