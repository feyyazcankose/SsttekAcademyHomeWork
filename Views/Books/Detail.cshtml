@{
    ViewData["Title"] = "Book Detail";
}

@model Book

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded">
                <div class="card-header bg-success text-white rounded-top">
                    <h3>Book Details</h3>
                </div>
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                    <p class="card-text"><strong>Author:</strong> @Model.Author</p>
                    <p class="card-text"><strong>Publication Year:</strong> @Model.PublicationYear</p>
                    <p class="card-text"><strong>ISBN:</strong> @Model.ISBN</p>
                    <p class="card-text"><strong>Genre:</strong> @Model.Genre</p>
                    <p class="card-text"><strong>Publisher:</strong> @Model.Publisher</p>
                    <p class="card-text"><strong>Page Count:</strong> @Model.PageCount</p>
                    <p class="card-text"><strong>Language:</strong> @Model.Language</p>
                    <p class="card-text"><strong>Summary:</strong> @Model.Summary</p>
                    <p class="card-text"><strong>Available Copies:</strong> @Model.AvailableCopies</p>
                </div>
                <div class="card-footer text-muted rounded-bottom d-flex align-items-center justify-content-between">
                    <span>Book ID: @Model.Id</span>
                    <a href="@Url.Action("Index", "Books")" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

